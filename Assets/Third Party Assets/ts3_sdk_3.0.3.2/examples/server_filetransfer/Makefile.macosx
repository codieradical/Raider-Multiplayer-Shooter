#
# Makefile to build TeamSpeak 3 SDK Server FileTransfer Sample on Mac OS X
#

CFLAGS = -Wall -g -O0

all: ts3_server_filetransfer_sample

ts3_server_filetransfer_sample: main.o
	gcc -o ts3_server_filetransfer_sample main.o -L../../bin -lts3server_mac
	cp ts3_server_filetransfer_sample ../../bin
	install_name_tool -change /usr/local/lib/libts3server_mac.dylib ../../bin/libts3server_mac.dylib ts3_server_filetransfer_sample
	
main.o: main.c
	gcc -c -I../../include main.c $(CFLAGS)

clean:
	rm -rf *.o ts3_server_filetransfer_sample
